<%- include ../public/header %>

<div class="row">
	<div class="col-md-6">
		<img src="images/login_ad.jpg" class="img-thumbnail" alt="Responsive image">
	</div>
	<div class="col-md-6">
		<form id="reg_form" class="form-horizontal" method="POST">
			<% if(tip.error!=""){ %>
		  		<div class="alert alert-danger" role="alert"><%=tip.error %></div>
		  	<% } %>
		  <div id="infoerr" class="alert alert-danger" role="alert" style="display:none"></div>
		  <div class="form-group">
		    <label for="inputName" class="col-sm-2 control-label">账号：</label>
		    <div class="col-sm-10">
		      <input type="email" name="users[username]" class="form-control" id="inputName" placeholder="输入您的账号">
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="inputPassword" class="col-sm-2 control-label">密码：</label>
		    <div class="col-sm-10">
		      <input type="password" name="users[password]" class="form-control" id="inputPassword" placeholder="输入您的密码">
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="inputPassword2" class="col-sm-2 control-label">确认密码：</label>
		    <div class="col-sm-10">
		      <input type="password" class="form-control" id="inputPassword2" placeholder="输入您的密码">
		    </div>
		  </div>
		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <button id="btnSubmit" type="button" class="btn btn-primary">注册</button>
		    </div>
		  </div>
		</form>
		
	</div>
</div>
<script type="text/javascript">
	$(function(){
		$("#btnSubmit").on("click",function(event){
			//event.preventDefault();
			if($("#inputPassword").val() !== $("#inputPassword2").val()){
				$("#infoerr").text("2次密码不相符！").show();
				return;
			}
			if($("#inputName").val() == ""){
				$("#infoerr").text("用户名、密码为空！").show();
				return;
			}
			$("#reg_form").submit();
		});
	});
</script>

<%- include ../public/footer %>